<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@android:id/background"
        android:height="@dimen/health_widget_progress_height"
        android:gravity="fill_horizontal|center">

        <shape android:shape="rectangle">
            <solid android:color="?attr/progressNormalColor" />
            <corners android:radius="900.0dip" />
            <size android:width="4.0dip" android:height="12.0dip" />
        </shape>
    </item>

    <item
        android:id="@android:id/secondaryProgress"
        android:height="@dimen/health_widget_progress_height"
        android:gravity="fill_horizontal|center">

        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <solid android:color="?attr/progressActivatedColor" />
                <corners android:radius="900.0dip" />
                <size android:width="4.0dip" android:height="12.0dip" />
            </shape>
        </scale>

    </item>

    <item
        android:id="@android:id/progress"
        android:height="@dimen/health_widget_progress_height"
        android:gravity="fill_horizontal|center">

        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <solid android:color="?attr/progressActivatedColor" />
                <corners android:radius="900.0dip" />
                <size android:width="4.0dip" android:height="12.0dip" />
            </shape>
        </scale>

    </item>

</layer-list>
