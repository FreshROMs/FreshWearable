<?xml version="1.0" encoding="utf-8"?>
<dev.oneuiproject.oneui.layout.ToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/health_dashboard_toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:title="@string/fresh_health_launcher_name"
    app:expandable="false"
    app:expanded="false"
    tools:context=".wearable.activities.DeviceListActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:src="@drawable/ic_oui_arrow_left"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/dashboard_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_summary_today"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_centerInParent="true"/>
            <ImageButton
                android:id="@+id/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:src="@drawable/ic_oui_arrow_right"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dashboard_gridlayout"
                app:columnCount="2" />
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</dev.oneuiproject.oneui.layout.ToolbarLayout>
