<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingHorizontal="22.0dip"
    android:paddingVertical="18.0dip">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16.0dip"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Distance; TODO: Replace with Calories -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:src="@drawable/health_dashboard_widget_stats_distance" />
            <TextView
                android:id="@+id/dashboard_goals_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.0dip"
                android:text="@string/stats_empty_value"
                android:textSize="20.0sp"
                android:textColor="@color/oui_primary_text_color"
                android:textFontWeight="600"
                tools:text="0 km" />
        </LinearLayout>

        <!-- Steps -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12.0dip"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:src="@drawable/health_dashboard_widget_stats_steps" />
            <TextView
                android:id="@+id/dashboard_goals_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.0dip"
                android:text="@string/stats_empty_value"
                android:textSize="20.0sp"
                android:textColor="@color/oui_primary_text_color"
                android:textFontWeight="600"
                tools:text="0 steps" />
        </LinearLayout>

        <!-- Active time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:src="@drawable/health_dashboard_widget_stats_active_time" />
            <TextView
                android:id="@+id/dashboard_goals_active_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.0dip"
                android:text="@string/stats_empty_value"
                android:textSize="20.0sp"
                android:textColor="@color/oui_primary_text_color"
                android:textFontWeight="600"
                tools:text="0 min" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <xyz.tenseventyseven.fresh.health.components.CircularProgressView
            android:id="@+id/dashboard_goals_active_time_progress"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_gravity="center"
            app:backgroundColor="?attr/progressNormalColor"
            app:progressColor="@color/health_active_time_color"
            app:stroke="12.0dip" />
        <xyz.tenseventyseven.fresh.health.components.CircularProgressView
            android:id="@+id/dashboard_goals_steps_progress"
            android:layout_width="95.0dip"
            android:layout_height="95.0dip"
            android:layout_gravity="center"
            app:backgroundColor="?attr/progressNormalColor"
            app:progressColor="@color/health_steps_color"
            app:stroke="12.0dip" />
        <xyz.tenseventyseven.fresh.health.components.CircularProgressView
            android:id="@+id/dashboard_goals_distance_progress"
            android:layout_width="130.0dip"
            android:layout_height="130.0dip"
            android:layout_gravity="center"
            app:backgroundColor="?attr/progressNormalColor"
            app:progressColor="@color/health_distance_color"
            app:stroke="12.0dip" />
    </FrameLayout>
</LinearLayout>