<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8.0dip"
    android:paddingHorizontal="16.0dip"
    android:background="@color/oui_round_and_bgcolor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <View
            android:layout_width="match_parent"
            android:layout_height="24.0dip" />

        <TextView
            android:id="@+id/about_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/oui_primary_text_color"
            android:text="@string/wear_device_about_device_device_name"
            android:textSize="30sp"
            android:layout_marginHorizontal="8dp"
            android:textAlignment="center"
            android:fontFamily="sec"
            android:textFontWeight="300" />

        <Button
            android:id="@+id/about_device_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20.0dip"
            android:text="@string/oui_common_edit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8.0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8.0dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="14sp"
                android:text="@string/wear_device_about_device_manufacturer" />

            <TextView
                android:id="@+id/about_device_manufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:textColor="@color/oui_primary_text_color"
                android:text="@string/unknown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8.0dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="14sp"
                android:text="@string/wear_device_about_device_product_name" />

            <TextView
                android:id="@+id/about_device_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:textColor="@color/oui_primary_text_color"
                android:text="@string/unknown" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_device_model_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8.0dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="14sp"
                android:text="@string/wear_device_about_device_model_number" />

            <TextView
                android:id="@+id/about_device_model_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:textColor="@color/oui_primary_text_color"
                android:text="@string/unknown" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>