<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <xyz.tenseventyseven.fresh.wearable.components.WatchQuickAccessItem
            android:layout_gravity="center"
            android:id="@+id/quick_access_watchface_layout"
            android:background="@drawable/list_round_ripple_effect"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:qpImage="@drawable/home_tab_watchface"
            app:qpText="Watch faces"/>
    </FrameLayout>
    <View
        android:background="@color/oui_list_divider_color"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"/>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <xyz.tenseventyseven.fresh.wearable.components.WatchQuickAccessItem
            android:layout_gravity="center"
            android:id="@+id/quick_access_apps_layout"
            android:background="@drawable/list_round_ripple_effect"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:qpImage="@drawable/home_tab_apps"
            app:qpText="Apps"/>
    </FrameLayout>
    <View
        android:background="@color/oui_list_divider_color"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"/>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <xyz.tenseventyseven.fresh.wearable.components.WatchQuickAccessItem
            android:layout_gravity="center"
            android:id="@+id/quick_access_widgets_layout"
            android:background="@drawable/list_round_ripple_effect"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:qpImage="@drawable/home_tab_tile"
            app:qpText="Tiles"/>
    </FrameLayout>
    <View
        android:background="@color/oui_list_divider_color"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"/>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <xyz.tenseventyseven.fresh.wearable.components.WatchQuickAccessItem
            android:layout_gravity="center"
            android:id="@+id/quick_access_quick_settings_layout"
            android:background="@drawable/list_round_ripple_effect"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:qpImage="@drawable/home_tab_quick_settings"
            app:qpText="Widgets"/>
    </FrameLayout>
</LinearLayout>
