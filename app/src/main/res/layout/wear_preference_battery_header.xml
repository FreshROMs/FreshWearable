<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12.0dip"
    android:paddingBottom="8.0dip"
    android:paddingHorizontal="16.0dip"
    android:background="@color/oui_round_and_bgcolor">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/battery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="600"
            android:textSize="32.0sp"
            android:textColor="@color/oui_appinfolayout_app_label_text_color"
            tools:text="80%" />
        <TextView
            android:id="@+id/battery_subtext_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:textFontWeight="500"
            android:textSize="16.0sp"
            android:textColor="@color/oui_appinfolayout_app_label_text_color"
            android:text="@string/wear_device_battery_settings_subtext_available" />
    </LinearLayout>

    <xyz.tenseventyseven.fresh.components.HorizontalProgressView
        android:id="@+id/battery_progress"
        android:layout_width="match_parent"
        android:layout_height="32.0dip"
        app:hBackgroundColor="@color/wearable_battery_progress_background" />
</LinearLayout>