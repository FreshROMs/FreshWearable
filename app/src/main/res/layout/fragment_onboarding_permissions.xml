<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32.0dip"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/onboarding_permissions_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="96dp"
            android:paddingBottom="42dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Fresh.Onboarding.AppName"
                android:text="Fresh Wearable uses these permissions" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/permissions_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/permisisons_continue"
            style="@style/Theme.Fresh.Button.Onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:layout_marginHorizontal="12.0dip"
            android:text="@string/oui_common_continue" />
    </LinearLayout>
</RelativeLayout>
