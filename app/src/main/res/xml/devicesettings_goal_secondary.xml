                android:key="fitness_goal_secondary"
                android:title="@string/pref_title_goal_secondary"
                app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>

    </PreferenceScreen>
</androidx.preference.PreferenceScreen>
