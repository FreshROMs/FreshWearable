    <declare-styleable name="NoiseControlPreference">
        <attr name="ancValue" format="string" />
        <attr name="offValue" format="string" />
        <attr name="transparencyValue" format="string" />
        <attr name="selectedValue" format="string" />
    </declare-styleable>

    <declare-styleable name="ButtonGroupPreference">
        <attr name="entries" format="reference" /> <!-- Array of display names -->
        <attr name="entryValues" format="reference" /> <!-- Array of corresponding values -->
    </declare-styleable>

    <declare-styleable name="EqualizerPreviewPreference">
        <attr name="watchKey" format="string" /> <!-- Key to watch for changes -->
        <attr name="drawableEntries" format="reference" /> <!-- Array of drawable names -->
        <attr name="graphEntries" format="reference" /> <!-- Array of corresponding values -->
    </declare-styleable>

    <declare-styleable name="ImagePreference">
        <attr name="preferenceImage" format="reference" />
    </declare-styleable>

    <declare-styleable name="WatchQuickAccessItem">
        <attr name="qpImage" format="reference" />
        <attr name="qpText" format="string" />
    </declare-styleable>

    <declare-styleable name="WatchQuickAccessPreference">
        <attr name="qpWatchfaces" format="boolean" />
        <attr name="qpApps" format="boolean" />
        <attr name="qpTiles" format="boolean" />
        <attr name="qpWidgets" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WidgetPreviewItem">
        <attr name="wpTitle" format="string" />
        <attr name="wpSubtitle" format="string" />
    </declare-styleable>

    <declare-styleable name="CircularProgressView">
        <attr name="cProgress" format="float" />
        <attr name="cMax" format="float" />
        <attr name="cStroke" format="dimension" />
        <attr name="cBackgroundColor" format="color" />
        <attr name="cProgressColor" format="color" />
    </declare-styleable>

    <declare-styleable name="HorizontalProgressView">
        <attr name="hProgress" format="float" />
        <attr name="hMin" format="float" />
        <attr name="hMax" format="float" />
        <attr name="hBackgroundColor" format="color" />
        <attr name="hProgressColor" format="color" />
        <attr name="hDotColor" format="color" />
        <attr name="hDotBorderColor" format="color" />
    </declare-styleable>
